# =================================================================
# CONFIGURAÇÕES DO SISTEMA DE GERAÇÃO AUTOMÁTICA DE CONTEÚDO SEO
# =================================================================

# -----------------------------------------------------------------
# CONFIGURAÇÕES GERAIS
# -----------------------------------------------------------------
APP_NAME="Sistema de Geração Automática de Conteúdo SEO"
APP_VERSION="1.0.0"
DEBUG=True
PORT=3025
HOST=0.0.0.0
LOG_LEVEL=INFO

# -----------------------------------------------------------------
# SITE ALVO
# -----------------------------------------------------------------
TARGET_SITE_URL="https://www.creativecopias.com.br"
TARGET_SITE_NAME="Creative Cópias"

# URLs de categorias para scraping (JSON array)
CATEGORY_URLS='["https://www.creativecopias.com.br/impressoras", "https://www.creativecopias.com.br/multifuncionais"]'

# Configurações de scraping
SCRAPING_DELAY=2
MAX_RETRIES=3
TIMEOUT_SECONDS=30
USER_AGENT="Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36"

# -----------------------------------------------------------------
# BANCO DE DADOS
# -----------------------------------------------------------------
DATABASE_URL="sqlite:///./products.db"

# -----------------------------------------------------------------
# WORDPRESS API
# -----------------------------------------------------------------
WORDPRESS_URL="https://seusite.com.br/wp-json/wp/v2/"
WORDPRESS_USERNAME="seu_usuario"
WORDPRESS_PASSWORD="sua_senha_de_aplicacao"

# -----------------------------------------------------------------
# IA / GERAÇÃO DE CONTEÚDO
# -----------------------------------------------------------------
OPENAI_API_KEY=sk-proj-XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
OPENAI_MODEL="gpt-4o-mini"
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.7

# -----------------------------------------------------------------
# CONFIGURAÇÕES ESPECÍFICAS
# -----------------------------------------------------------------
CONTENT_MIN_WORDS=300
CONTENT_MAX_WORDS=1000
CONTENT_LANGUAGE="pt-BR"
CONTENT_TONE="profissional"

# -----------------------------------------------------------------
# SEGURANÇA
# -----------------------------------------------------------------
SECRET_KEY="sua-chave-secreta-super-forte-aqui"
ADMIN_USERNAME="admin"
ADMIN_PASSWORD="senha_forte_admin"

# ========================================================
# CONFIGURAÇÕES DE LOG E DADOS
# ========================================================

# Pasta de logs (padrão: logs/)
LOG_DIR=logs/

# Pasta de dados (padrão: data/)
DATA_DIR=data/

# ========================================================
# CONFIGURAÇÕES DE PUBLICAÇÃO - WORDPRESS
# ========================================================

# URL base do site WordPress (obrigatório)
WP_SITE_URL=https://seu-site.com

# Credenciais de acesso WordPress
WP_USERNAME=seu_usuario
WP_PASSWORD=sua_senha_ou_app_password

# Configurações de publicação automática
WP_AUTO_PUBLISH=true
WP_DEFAULT_CATEGORY=geral
WP_DEFAULT_STATUS=draft 
 
 